{
  "name": "Fullstack Dev Environment",
  "dockerComposeFile": ["docker-compose.yml"],
  "service": "app",
  "workspaceFolder": "/workspaces/fads",

  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
      },
      "extensions": [
        "ms-dotnettools.csharp",
        "ms-vscode.node-debugger",
        "mongodb.mongodb-vscode",
        "ms-mssql.mssql"
      ]
    }
  },
  
  "forwardPorts": [3000, 1433, 27017],

  "postCreateCommand": "npm install && dotnet restore"
}